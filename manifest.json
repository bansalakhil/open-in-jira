{
  "manifest_version": 2,
  "name": "jira Issue opener",
  "description": "Open issue in jira",
  "version": "1",
  "author": "Akhil Bansal",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "context.js",
      "options.js",
      "popup.js"
    ],
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jira.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon-128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
